<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@null"
                android:gravity="right"

                android:hint=""
                android:inputType="number"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/et_resultado"
                style="boder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"


                android:gravity="right"
                android:text="120"
                android:textSize="64dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="#74B6E2"
                android:text="CE"
                android:onClick="botonPulsado"
                android:textSize="24sp">

            </Button>
"

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_1"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#95D6E2"
                    android:onClick="botonPulsado"
                    android:paddingTop="2dp"
                    android:text="1"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/btn_2"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#95D6E2"
                    android:onClick="botonPulsado"
                    android:paddingTop="2dp"
                    android:text="2"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/btn_3"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#95D6E2"
                    android:onClick="botonPulsado"
                    android:paddingTop="2dp"
                    android:text="3"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/btn_sumar"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#74B6E2"
                    android:onClick="botonPulsado"
                    android:text="+"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_4"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#95D6E2"
                    android:onClick="botonPulsado"
                    android:text="4"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/btn_5"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#95D6E2"
                    android:onClick="botonPulsado"
                    android:text="5"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/btn_6"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#95D6E2"
                    android:onClick="botonPulsado"
                    android:text="6"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/btn_restar"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#74B6E2"
                    android:onClick="botonPulsado"
                    android:text="-"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:paddingBottom="2dp">

                <Button
                    android:id="@+id/btn_7"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#95D6E2"
                    android:onClick="botonPulsado"
                    android:text="7"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/btn_8"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#95D6E2"
                    android:onClick="botonPulsado"
                    android:text="8"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/btn_9"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#95D6E2"
                    android:onClick="botonPulsado"
                    android:text="9"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/btn_multiplicar"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#74B6E2"
                    android:onClick="botonPulsado"
                    android:text="*"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_punto"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#95D6E2"
                    android:onClick="botonPulsado"
                    android:text="."
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/btn_cero"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#95D6E2"
                    android:onClick="botonPulsado"
                    android:text="0"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/btn_igual"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#3F51B5"
                    android:onClick="botonPulsado"
                    android:text="="
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/btn-division"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#74B6E2"
                    android:onClick="botonPulsado"
                    android:text="/"
                    android:textSize="36sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>